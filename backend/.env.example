# Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Settings
# For development, use '*' to allow all origins
# For production, specify your Wix site URL
CORS_ORIGIN=*
# Example for production:
# CORS_ORIGIN=https://yoursite.wixsite.com/yourpage

# Business Configuration
BUSINESS_HOURS_START=7
BUSINESS_HOURS_END=22
TIMEZONE=Asia/Hong_Kong

# Pricing (in HKD)
PRICE_PER_HOUR=280
PRICE_PER_30MIN=140
SUNDAY_AIRCON_FEE=80

# Contact Information
WHATSAPP_NUMBER=85298725268
EMAIL=connectpoint@atsumaru.com

# Payment Information
BANK_NAME=HSBC
ACCOUNT_NUMBER=123-456789-001
PAYME_NUMBER=+852 9872 5268

# Database Configuration
# For JSON file storage (default)
DATA_FILE=./bookings.json

# For future database upgrade (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/bookings
# or
# DATABASE_URL=mongodb://localhost:27017/bookings

# Email Notifications (optional - for future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Admin Panel Security (optional - for future feature)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your-secure-password
# JWT_SECRET=your-jwt-secret-key

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Rate Limiting (optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
